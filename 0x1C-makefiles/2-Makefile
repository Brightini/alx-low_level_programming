CC=gcc
NAME=school
SRC=main.c school.c
OBJ=$(SRC:.c=.o) # defines the corresponding object file for each source file

# create executable file
# $@ represents the target name (executable name)
# $^ represents the object files of the target
all:$(SRC) $(NAME)
$(NAME): $(OBJ)
	$(CC) $^ -o $@
